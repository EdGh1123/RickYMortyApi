<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btCargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/bordes_redondos"
        android:backgroundTint="#0C9DB3"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/eater"
        android:text="@string/bt_cargar"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tvLista"
        app:layout_constraintTop_toBottomOf="@+id/tvLista" />

    <Button
        android:id="@+id/btListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="60dp"
        android:background="@drawable/bordes_redondos"
        android:backgroundTint="#0C9DB3"
        android:backgroundTintMode="src_atop"
        android:fontFamily="@font/eater"
        android:text="@string/bt_listar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/tvLista"
        app:layout_constraintTop_toBottomOf="@+id/tvLista" />

    <TextView
        android:id="@+id/tvLista"
        android:layout_width="316dp"
        android:layout_height="433dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/advent_pro_bold"
        android:scrollbars="vertical"
        android:text="PRESIONE EL BOTON CARGAR PARA MOSTRAR DATOS"
        android:textAlignment="viewStart"
        android:textColor="#306D7C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="114dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="@+id/btCargar"
        app:layout_constraintTop_toBottomOf="@+id/tvLista"
        app:srcCompat="@drawable/unnamed" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="426dp"
        android:layout_height="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ilr" />

</androidx.constraintlayout.widget.ConstraintLayout>